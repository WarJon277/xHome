<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="#1AFFFFFF"
    android:layout_marginBottom="8dp"
    android:id="@+id/serverItemRoot">

    <CheckBox
        android:id="@+id/serverEnabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#FF9800"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/serverUrlText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://192.168.0.239"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/serverStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Статус: неизвестно"
            android:textColor="#808080"
            android:textSize="12sp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnTestServer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_rotate"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#FF9800"
        android:contentDescription="Проверить"/>

    <ImageButton
        android:id="@+id/btnDeleteServer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#FF5252"
        android:contentDescription="Удалить"/>

</LinearLayout>
